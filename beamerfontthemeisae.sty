\mode<presentation>

\usefonttheme{default}

% toc
\setbeamerfont{section in toc}{parent=structure, series=\bfseries}

% title
\setbeamerfont{title}{series=\bfseries}

% title page
\setbeamerfont{titlepageisae}{series=\bfseries,size=\large}
\setbeamerfont{titlepagetitleisae}{series=\bfseries,size=\Large}
\setbeamerfont{titlepagesubtitleisae}{size=\large}
\setbeamerfont{titlepageauthorinstisae}{size=\footnotesize}
\setbeamerfont{titlepageauthorisae}{parent=titlepageauthorinstisae}
\setbeamerfont{titlepageinstituteisae}{parent=titlepageauthorinstisae}

% alert
\setbeamerfont{alerted text}{series=\bfseries}

% blocks
\setbeamerfont{block}{parent=structure}
\setbeamerfont{block title}{parent=block,series=\bfseries}
\setbeamerfont{block body}{parent=block,size=\normalsize}
\setbeamerfont{block code title}{parent=block,series=\tt\bfseries}
\setbeamerfont{block code sm title}{parent=block,size=\small,series=\tt\bfseries}

\renewcommand{\emph}[1]{\textbf{#1}\xspace}

\mode<all>