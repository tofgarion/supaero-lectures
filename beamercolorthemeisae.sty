\makeatletter

\usecolortheme{default}

% color definition
\mode<presentation>{
\definecolor{isae@bg}{rgb}{1,1,1}
\definecolor{isae@fg}{rgb}{0,0,0}
\definecolor{isae@bgtitle}{rgb}{0,0,0}
\definecolor{isae@fgtitle}{rgb}{1,1,1}
\definecolor{isae@myball}{rgb}{0,0,0}
\definecolor{isae@blockline}{rgb}{0,0,0}
\colorlet{isae@bgblock}{isae@fg!20}
\colorlet{isae@bgnode}{isae@fg!20}
\colorlet{isae@bgnodeemph}{isae@fg!40}
}

\ifx\slideshandout\undefined
\mode<handout>{
\definecolor{isae@bgtitle}{rgb}{1,1,1}
\definecolor{isae@fgtitle}{rgb}{0,0,0}
\colorlet{isae@bgblock}{isae@fg!10}
\colorlet{isae@bgnode}{isae@fg!10}
\colorlet{isae@bgnodeemph}{isae@fg!30}
}
\else
\relax
\fi

\mode<presentation>
% structure
\setbeamercolor{structure}{fg=isae@fg,bg=isae@bg}

% partpage
\setbeamercolor{part title}{fg=isae@fg,bg=isae@bg}

% headline/footline colors
\setbeamercolor{frametitle}{fg=isae@fgtitle,bg=isae@bgtitle}
\setbeamercolor{frametitle gradient}{fg=isae@bgtitle,bg=isae@bgtitle!white!60}
\setbeamercolor{author in head/foot}{fg=isae@fgtitle,bg=isae@bgtitle}
\setbeamercolor{title in head/foot}{fg=isae@fgtitle,bg=isae@bgtitle}

% itemize/enumerate
\setbeamercolor{item}{fg=isae@fg,bg=isae@bg}

% alert
\setbeamercolor{alerted text}{fg=isae@fg}

% blocks
\setbeamercolor{block}{fg=isae@fg,bg=isae@bgblock}
\setbeamercolor{block title}{parent=block}
\setbeamercolor{block body}{parent=block}
\setbeamercolor{block title alerted}{parent=block title}
\setbeamercolor{block body alerted}{parent=block body}
\setbeamercolor{block title example}{parent=block title}
\setbeamercolor{block body example}{parent=block body}

\makeatother